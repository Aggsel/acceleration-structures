{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run CUDA",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "mkdir",
                "compile",
                "run",
                "openImage"
            ],
            "problemMatcher": []
        },
        {
            "label": "mkdir",
            "type": "shell",
            "command": "mkdir -p build",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "compile",
            "type": "shell",
            "command": "nvcc.exe src/main.cu -o build/main",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./build/main.exe",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "openImage",
            "type": "shell",
            "command": "start output.ppm",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}